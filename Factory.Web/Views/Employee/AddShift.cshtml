
@{
    ViewBag.Title = "AddShift";
}
<h2>Add</h2>

<form action="/Employee/AddShift" method="post">
    <div class="form-horizontal">
        <h4>Shift for employee</h4>
        <hr />
        <input type="hidden" name="empId" value="@ViewBag.empId">

        <div class="form-group">
            @Html.Label("Emloyee Full Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h5>@ViewBag.employeeName</h5>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Select Shift", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="shiftId" class="form-control">
                    @foreach (var s in ViewBag.shifts)
                    {
                        <option value="@s.ID">@s.ShiftDate  @s.StartTime:00 - @s.EndTime:00</option>
                    }
                </select>

            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add Shift" class="btn btn-default" />
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


