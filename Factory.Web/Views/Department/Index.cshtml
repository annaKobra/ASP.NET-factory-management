@model IEnumerable<Factory.Web.Models.DepartmentDTO>
@{
    ViewBag.Title = "Index";
}
    <h2>Departments information</h2>

<p>
    @Html.ActionLink("Add Department", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ManagerFullName)
        </th>
        <th></th>
        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
            <td>@Html.DisplayFor(modelItem => item.ManagerFullName)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { depId = item.DepId }, new { @class = "btn btn-info" }) |
                @{
                    string linkDisabled = item.isExist ? "disabled" : "";
                }
                @Html.ActionLink("Delete", "Delete", new { depId = item.DepId }, new { @class = "btn btn-link " + @linkDisabled })
            </td>
        </tr>
    }

</table>
<div>
    @Html.ActionLink("Back to Home Page", "GetHomePage", "Login")
</div>






